<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary">

    <HorizontalScrollView
        android:id="@+id/hsview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_news_top"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:text="头条"
                android:textColor="#F0F8FF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_news_shehui"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:text="社会"
                android:textColor="#F0F8FF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_news_guonei"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:text="国内"
                android:textColor="#F0F8FF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_news_guoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="国际"
                android:textColor="#F0F8FF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_news_yule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:text="娱乐"
                android:textColor="#F0F8FF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_news_tiyu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:text="体育"
                android:textColor="#F0F8FF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_news_junshi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:text="军事"
                android:textColor="#F0F8FF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_news_keji"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:text="科技"
                android:textColor="#F0F8FF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_news_caijing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:text="财经"
                android:textColor="#F0F8FF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_news_shishang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:text="时尚"
                android:textColor="#F0F8FF"
                android:textSize="20sp" />

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
